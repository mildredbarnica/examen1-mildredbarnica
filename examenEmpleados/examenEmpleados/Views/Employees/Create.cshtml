@model examenEmpleados.Models.Employee

@{
    ViewData["Title"] = "Agregar Empleado";
}

<h2>Agregar Nuevo Empleado</h2>
<hr />


<div class="container">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div class="form-row">
                        <div class="col-md-6">

                            <div class="form-group form-row">

                                <div class="col-md-8">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group form-row">
                                        <label asp-for="EmployeeApellido" class="col-sm-4 col-form-label"></label>
                                        <div class="col-sm-8">
                                            <input asp-for="EmployeeApellido" class="form-control" />
                                        </div>
                                        <span asp-validation-for="EmployeeApellido" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-row">
                                        <label asp-for="EmployeeNombres" class="col-sm-4 col-form-label"></label>
                                        <div class="col-sm-8">
                                            <input asp-for="EmployeeNombres" class="form-control" />
                                        </div>
                                        <span asp-validation-for="EmployeeNombres" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-row">
                                        <label asp-for="EmployeeApodo" class="col-sm-4 col-form-label"></label>
                                        <div class="col-sm-8">
                                            <input asp-for="EmployeeApodo" class="form-control" />
                                        </div>
                                        <span asp-validation-for="EmployeeApodo" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-row">
                                        <label asp-for="EmployeeDireccion" class="col-sm-4 col-form-label"></label>
                                        <div class="col-sm-8">
                                            <input asp-for="EmployeeDireccion" class="form-control" />
                                        </div>
                                        <span asp-validation-for="EmployeeDireccion" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-row">
                                        <label asp-for="EmployeeCodigoPostal" class="col-sm-4 col-form-label"></label>
                                        <div class="col-sm-6">
                                            <input asp-for="EmployeeCodigoPostal" class="form-control" />
                                        </div>
                                        <span asp-validation-for="EmployeeCodigoPostal" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="col-md-8">

                                <div class="form-group form-row">
                                    <label asp-for="EmployeeTelefono" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="EmployeeTelefono" class="form-control" />
                                    </div>
                                    <span asp-validation-for="EmployeeTelefono" class="text-danger"></span>
                                </div>

                                <div class="form-group form-row">
                                    <label asp-for="EmployeeCelular" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="EmployeeCelular" class="form-control" />
                                    </div>
                                    <span asp-validation-for="EmployeeCelular" class="text-danger"></span>
                                </div>

                                <div class="form-group form-row">
                                    <label asp-for="EmployeeFax" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="EmployeeFax" class="form-control" />
                                    </div>

                                    <span asp-validation-for="EmployeeFax" class="text-danger"></span>
                                </div>

                                <div class="form-group form-row">
                                    <label asp-for="EmployeeEmail" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="EmployeeEmail" class="form-control" />
                                    </div>
                                    <span asp-validation-for="EmployeeEmail" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmployeeObservaciones" class="col-sm-4 col-form-label"></label>
                        <div class="form-group ">

                            <textarea asp-for="EmployeeObservaciones" class="form-control "></textarea>
                        </div>
                        <span asp-validation-for="EmployeeObservaciones" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-warning">Regresar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync
        ("_ValidationScriptsPartial");
    }
}